<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Shadow">
        <item name="android:windowBackground">@color/translucent_40</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="ProgressThemeDark" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_700</item>
    </style>

    <style name="RecordMoodButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_record_mood_button</item>
    </style>

    <style name="RecordDetailButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_record_mood_ripple</item>
    </style>

    <style name="RecordDetailMoodIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">@dimen/margin_quarter</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PsyTestColorTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_cccccc</item>
        <item name="colorControlActivated">@color/black_3f3a3a</item>
    </style>

    <style name="psy_test_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">@dimen/size_test_item</item>
    </style>

    <style name="psy_test_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_basic</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">@dimen/size_test_item</item>
    </style>

    <style name="PsyTestResultButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_record_mood_ripple</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/blue_700_Dark</item>
    </style>

    <style name="AlertDialogTheme.Center" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/bg_radius</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyleCenter</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyleCenter</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitlePaneStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/blue_700</item>
    </style>

    <style name="TitleIconStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">#d50000</item>
    </style>

    <style name="TitleTextStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BodyTextStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonBarStyle">
        <item name="android:background">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_700_Dark</item>
        <item name="rippleColor">@color/blue_700_Light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_700_Dark</item>
        <item name="android:textSize">15sp</item>
        <item name="rippleColor">@color/blue_700_Light</item>
    </style>

    <style name="GoogleCustom" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/google_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FacebookCustom" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/fb_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConsultationCallTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
