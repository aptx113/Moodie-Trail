<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.danteyu.studio.moodietrail.network.LoadApiStatus" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.danteyu.studio.moodietrail.statistic.StatisticViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f0f0f0">

        <ImageView
            android:id="@+id/image_toolbar_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_toolbar_back"
            android:tint="@color/blue_700_Dark"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/text_toolbar_date"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_toolbar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/droid_sans"
            android:textColor="@color/blue_700_Dark"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/image_toolbar_next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_toolbar_last"
            app:layout_constraintTop_toTopOf="parent"
            app:timeToDisplayDateYMFormat="@{viewModel.currentDate}"
            tools:text="2020-01"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/image_toolbar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:src="@drawable/ic_toolbar_next"
            android:tint="@color/blue_700_Dark"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_toolbar_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_toolbar_last">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_basic">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_basic"
                    android:layout_marginTop="@dimen/margin_half"
                    android:background="@drawable/bg_radius"
                    android:elevation="@dimen/margin_quarter"
                    android:paddingHorizontal="@dimen/margin_half"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_month_line_chart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="@string/mood_tread_by_month"
                        android:textColor="@color/blue_700"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/margin_half"
                        android:layout_marginTop="1.5dp"
                        android:background="@drawable/ic_info"
                        android:backgroundTint="@color/blue_700"
                        android:onClick="@{() -> viewModel.showLineChartInfo()}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toEndOf="@id/text_month_line_chart_title"
                        app:layout_constraintTop_toTopOf="@id/text_month_line_chart_title" />

                    <TextView
                        android:id="@+id/text_month_no_mood_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_basic"
                        android:text='@{viewModel.avgMoods != null ? @string/chart_no_data : ""}'
                        android:textAlignment="center"
                        android:textColor="@color/blue_700_Dark"
                        android:textSize="16sp"
                        android:visibility="@{viewModel.avgMoods.size() == 0  ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="@id/line_chart_mood"
                        app:layout_constraintEnd_toEndOf="@id/line_chart_mood"
                        app:layout_constraintStart_toStartOf="@id/line_chart_mood"
                        app:layout_constraintTop_toTopOf="@id/line_chart_mood"
                        tools:visibility="visible" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart_mood"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="@dimen/margin_half"
                        android:layout_marginVertical="@dimen/margin_half"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.77:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_month_line_chart_title" />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ProgressTheme"
                        app:layout_constraintBottom_toBottomOf="@id/line_chart_mood"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/line_chart_mood"
                        app:setupApiStatus="@{viewModel.status}"
                        tools:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:setupApiErrorMessage="@{viewModel.error}"
                        tools:visibility="gone" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_basic"
                    android:layout_marginTop="@dimen/margin_basic"
                    android:layout_marginBottom="@dimen/margin_basic"
                    android:background="@drawable/bg_radius"
                    android:elevation="@dimen/margin_quarter"
                    android:paddingHorizontal="@dimen/margin_half"
                    android:paddingBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_month">

                    <TextView
                        android:id="@+id/text_pie_chart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/droid_sans"
                        android:text="@string/mood_ratio_by_month"
                        android:textColor="@color/blue_700"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_no_mood_data_for_pie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:text='@{viewModel.notes != null ? @string/chart_no_data : ""}'
                        android:textAlignment="center"
                        android:textColor="@color/blue_700_Dark"
                        android:textSize="16sp"
                        android:visibility="@{viewModel.notes.size() == 0  ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="@id/pie_chart_mood"
                        app:layout_constraintEnd_toEndOf="@id/pie_chart_mood"
                        app:layout_constraintStart_toStartOf="@id/pie_chart_mood"
                        app:layout_constraintTop_toTopOf="@id/pie_chart_mood"
                        tools:visibility="visible" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart_mood"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="@dimen/margin_half"
                        android:layout_marginVertical="12dp"
                        app:layout_constraintDimensionRatio="1.77:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_pie_chart_title" />

                    <ImageView
                        android:id="@+id/image_very_good"
                        android:layout_width="54dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/margin_half"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/image_good"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pie_chart_mood"
                        app:srcCompat="@drawable/ic_mood_circle_very_good_normal" />

                    <TextView
                        android:id="@+id/text_badge_very_good"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:background="@drawable/bg_badge_very_good"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingHorizontal="@dimen/margin_quarter"
                        android:text="@{String.valueOf(viewModel.veryGoodCountInNotes)}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.veryGoodCountInNotes  > 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/image_very_good"
                        app:layout_constraintTop_toTopOf="@id/image_very_good" />

                    <ImageView
                        android:id="@+id/image_good"
                        android:layout_width="54dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/image_normal"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_very_good"
                        app:layout_constraintTop_toTopOf="@id/image_very_good"
                        app:srcCompat="@drawable/ic_mood_circle_good_normal" />

                    <TextView
                        android:id="@+id/text_badge_good"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:background="@drawable/bg_badge_good"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingHorizontal="@dimen/margin_quarter"
                        android:text="@{String.valueOf(viewModel.goodCountInNotes)}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.goodCountInNotes  > 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/image_good"
                        app:layout_constraintTop_toTopOf="@id/image_good" />

                    <ImageView
                        android:id="@+id/image_normal"
                        android:layout_width="54dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/image_bad"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_good"
                        app:layout_constraintTop_toTopOf="@id/image_very_good"
                        app:srcCompat="@drawable/ic_mood_circle_normal_normal" />

                    <TextView
                        android:id="@+id/text_badge_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:background="@drawable/bg_badge_normal"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingHorizontal="@dimen/margin_quarter"
                        android:text="@{String.valueOf(viewModel.normalCountInNotes)}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.normalCountInNotes  > 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/image_normal"
                        app:layout_constraintTop_toTopOf="@id/image_normal" />

                    <ImageView
                        android:id="@+id/image_bad"
                        android:layout_width="54dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/image_very_bad"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_normal"
                        app:layout_constraintTop_toTopOf="@id/image_very_good"
                        app:srcCompat="@drawable/ic_mood_circle_bad_normal" />

                    <TextView
                        android:id="@+id/text_badge_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:background="@drawable/bg_badge_bad"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingHorizontal="@dimen/margin_quarter"
                        android:text="@{String.valueOf(viewModel.badCountInNotes)}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.badCountInNotes  > 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/image_bad"
                        app:layout_constraintTop_toTopOf="@id/image_bad" />

                    <ImageView
                        android:id="@+id/image_very_bad"
                        android:layout_width="54dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_bad"
                        app:layout_constraintTop_toTopOf="@id/image_very_good"
                        app:srcCompat="@drawable/ic_mood_circle_very_bad_normal" />

                    <TextView
                        android:id="@+id/text_badge_very_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:background="@drawable/bg_badge_very_bad"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:paddingHorizontal="@dimen/margin_quarter"
                        android:text="@{String.valueOf(viewModel.veryBadCountInNotes)}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.veryBadCountInNotes  > 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/image_very_bad"
                        app:layout_constraintTop_toTopOf="@id/image_very_bad" />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ProgressTheme"
                        app:layout_constraintBottom_toBottomOf="@id/pie_chart_mood"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/pie_chart_mood"
                        app:setupApiStatus="@{viewModel.status}"
                        tools:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:setupApiErrorMessage="@{viewModel.error}"
                        tools:visibility="gone" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>