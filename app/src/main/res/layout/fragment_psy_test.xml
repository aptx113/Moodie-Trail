<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.danteyu.studio.moodietrail.psytest.PsyTestViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/button_test_close"
            android:layout_width="@dimen/size_record_mood_close"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_basic"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/blue_700"
            android:onClick="@{() -> viewModel.leavePsyTest()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_underline"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.15"
            android:padding="@dimen/margin_quarter"
            android:text="@string/bsrs_5"
            android:textColor="@color/black_3f3a3a"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/text_test_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="10dp"
            android:text="@string/test_instruction"
            android:textColor="@color/black_3f3a3a"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_test_title" />

        <Button
            android:id="@+id/button_start_test"
            style="@style/RecordMoodButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_advanced"
            android:layout_marginTop="@dimen/margin_advanced"
            android:onClick="@{() -> viewModel.navigateToPsyTestBody()}"
            android:text="@string/test_start"
            android:textColor="@color/blue_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_test_instruction"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="551dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>