<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.danteyu.studio.moodietrail.recordmood.RecordMoodViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_record_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="@dimen/size_record_mood_close"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_basic"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_close_record"
            android:onClick="@{() -> viewModel.leaveRecordMood()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_record_mood_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.15"
            android:text="@string/instruction_mood"
            android:textColor="@color/black_3f3a3a"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />


        <ImageView
            android:id="@+id/image_mood_very_bad"
            android:layout_width="@dimen/size_record_mood_mood"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/image_mood_bad"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mood_circle_trans_very_bad" />

        <ImageView
            android:id="@+id/image_mood_bad"
            android:layout_width="@dimen/size_record_mood_mood"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/image_mood_normal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_mood_very_bad"
            app:layout_constraintTop_toTopOf="@id/image_mood_very_bad"
            app:srcCompat="@drawable/ic_mood_circle_trans_bad" />

        <ImageView
            android:id="@+id/image_mood_normal"
            android:layout_width="@dimen/size_record_mood_mood"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/image_mood_good"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_mood_bad"
            app:layout_constraintTop_toTopOf="@id/image_mood_very_bad"
            app:srcCompat="@drawable/ic_mood_circle_trans_normal" />

        <ImageView
            android:id="@+id/image_mood_good"
            android:layout_width="@dimen/size_record_mood_mood"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/image_mood_very_good"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_mood_normal"
            app:layout_constraintTop_toTopOf="@id/image_mood_very_bad"
            app:srcCompat="@drawable/ic_mood_circle_trans_good" />

        <ImageView
            android:id="@+id/image_mood_very_good"
            android:layout_width="@dimen/size_record_mood_mood"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_mood_good"
            app:layout_constraintTop_toTopOf="@id/image_mood_very_bad"
            app:srcCompat="@drawable/ic_mood_circle_trans_very_good" />

        <Button
            android:id="@+id/button_quick_save"
            style="@style/RecordMoodButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_basic"
            android:layout_marginBottom="16dp"
            android:text="@string/record_mood_quick_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_add_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_record_mood_quick_save"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:theme="@style/ProgressThemeDark"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/button_quick_save"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/button_quick_save"
            app:layout_constraintStart_toStartOf="@id/button_quick_save"
            app:layout_constraintTop_toTopOf="@id/button_quick_save"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_add_detail"
            style="@style/RecordMoodButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_basic"
            android:layout_marginBottom="@dimen/margin_basic"
            android:text="@string/record_mood_add_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_quick_save" />

        <ProgressBar
            android:id="@+id/progress_record_mood_add_detail"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:theme="@style/ProgressThemeDark"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/button_add_detail"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/button_add_detail"
            app:layout_constraintStart_toStartOf="@id/button_add_detail"
            app:layout_constraintTop_toTopOf="@id/button_add_detail"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>